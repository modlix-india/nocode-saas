{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.java",
            "options": {
                "tabWidth": 4,
                "printWidth": 120
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2,
                "printWidth": 100
            }
        },
        {
            "files": ["*.xml"],
            "options": {
                "tabWidth": 2,
                "printWidth": 100
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "tabWidth": 2,
                "printWidth": 100
            }
        },
        {
            "files": ["*.properties"],
            "options": {
                "tabWidth": 4,
                "printWidth": 100
            }
        }
    ]
}
